<h1 style="margin-bottom:30px;">Log in</h1>

<% if flash[:danger] != nil %>
  <div class="flash-alert alert alert-danger">
    <%= flash[:danger] %>
  </div>
<% end %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label :email, class: 'login-input' %>
      <%= f.email_field :email, class: 'form-control login-input' %>

      <%= f.label :password, class: 'login-input' %>
      <%= f.password_field :password, class: 'form-control login-input' %>

      <%= f.submit "Log in", class: "btn btn-primary btn-login" %>
    <% end %>
    <p style="margin-top:20px">New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
